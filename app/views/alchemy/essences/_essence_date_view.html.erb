<%- cache(content) do -%>
<%- date_format = value_from_settings_or_options(content, options, :date_format) -%>
<%- if content.ingredient.present? -%>
<%- if date_format == 'rfc822' -%>
<%= content.ingredient.to_s(:rfc822) %>
<%- else -%>
<%= l(content.ingredient, format: date_format) %>
<%- end -%>
<%- end -%>
<%- end -%>